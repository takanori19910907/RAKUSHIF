<p>従業員一覧</p>

<ul>
  <% @users.each do |user| %>

  <li>
  <%= user.name %>
  <% if user.work_status == 1 then %>
    <p>社員</p>
  <% elsif user.work_status == 2 then %>
    <p>パートナー</p>
  <% elsif user.work_status == 3 then %>
    <p>アルバイト</p>
  <% else %>
        <p>早朝アルバイト</p>
  <% end  %>
  <p><%= link_to "ユーザー情報編集",edit_user_path(user.id) %></p>
  <p><%= link_to "ユーザー削除", user_path(user.id), method: :delete,data:{confirm: "本当に削除しますか?"} %></p>

  </li>

  <% end %>
</ul>